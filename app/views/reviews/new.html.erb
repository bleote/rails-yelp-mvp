<div class="container text-center col-8 bg-light py-4">
  <h1>New Review</h1>
    <%=  simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: Review::RATING %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>

  <%= link_to "Back to restaurant page", restaurant_path(@restaurant), class: "btn-secondary p-2 rounded" %>
</div>
